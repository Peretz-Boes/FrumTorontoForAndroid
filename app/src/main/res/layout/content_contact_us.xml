<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/content_contact_us"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.boes.peretz.frumtoronto.ContactUsActivity"
    tools:showIn="@layout/activity_contact_us">

    <Button
        android:id="@+id/button44"
        android:text="Contact us"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="13dp"/>

    <Button
        android:id="@+id/button45"
        android:text="Register your business"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button44"
        android:layout_alignLeft="@+id/button44"
        android:layout_alignStart="@+id/button44"
        android:layout_marginTop="26dp"/>

    <Button
        android:id="@+id/button46"
        android:text="Advertising rates"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button45"
        android:layout_alignLeft="@+id/button45"
        android:layout_alignStart="@+id/button45"
        android:layout_marginTop="17dp"/>

    <Button
        android:id="@+id/button47"
        android:text="Frequently asked questions"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button46"
        android:layout_alignLeft="@+id/button46"
        android:layout_alignStart="@+id/button46"
        android:layout_marginTop="38dp"/>

    <Button
        android:id="@+id/button48"
        android:text="About us"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button47"
        android:layout_alignLeft="@+id/button47"
        android:layout_alignStart="@+id/button47"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="28dp"/>
</RelativeLayout>
